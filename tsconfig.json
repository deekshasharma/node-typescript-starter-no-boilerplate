{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
    "compilerOptions": {
      "lib": [
        "es2021"
      ],
      "module": "commonjs",
      "target": "es2021",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      }
    },
  "include": ["src/**/*"]
}
